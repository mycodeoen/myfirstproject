/**index.wxss**/
.container{
  width: 100%;
  height: 100%;
}
.model {
  /* position: absolute; */
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
  -webkit-animation: slide-top 0.5s ease-out both;
	animation: slide-top 0.5s ease-out both;
}
.container image{
  position:absolute;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.form{
  margin: 80rpx 88rpx 0;
}
.form_item{
  margin-bottom: 48rpx;
}
.form_item view{
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #206BED;
}
.form_item input{
  border: 1px solid #99C0FF;
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #206BED;
  padding: 18rpx 20rpx;
  margin-top: 16rpx;
}
.form_item .place{
  opacity: 0.4;
  color: #206BED;
}
.form button{
  height: 80rpx;
  border-radius: 0rpx;
  min-width: 100%;
  background-image: linear-gradient(270deg, #2262E6 0%, #0DC7CE 100%);
  font-family: PingFangSC-Regular;
  font-size: 32rpx;
  color: #FFFFFF;
  line-height: 48rpx;
  margin-top: 100rpx;
  margin-bottom: 10rpx;

}
.main_title{
  /* margin: 103rpx 44rpx 0; */
  font-family: TencentSansW7;
  font-size: 60rpx;
  text-align: center;
  color: #206BED;
  letter-spacing: 0;
  /* text-align: justify; */
}