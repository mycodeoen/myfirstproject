/* pages/inputinfo/register.wxss */
page{
  margin: 0px;
  padding: 0px;
}
label{
  text-align: left;
  display: inline-block;
  width: 20%;
  text-align: center;
}
.form{
  display: flex;
  justify-items: space-between;
}
input{
  margin: 2px;
  width: 70%;
  border: 2px solid black;
  border-radius: 3px;
}
.h1{
  text-align: center;
  font-size: 20px;
  font-weight: bold;
  margin-top: 20px;
}
.container_notext{
    width: 100%;
    text-align: center; 
    width: 70%;
    height: 150px;
    border: 2px solid black;
    border-radius: 3px;
    display: flex;
    flex-wrap: wrap;
}
textarea{
      width: 100%;
      height: 80px; 
      border-bottom:2px solid black;
      border-radius: 3px;
}
.container_inner{
  width: 50%;
}